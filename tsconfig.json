{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es6",
      "es2016",
      "es2015.promise"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
